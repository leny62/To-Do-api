{
  "name": "to-do-api",
  "version": "1.0.0",
  "description": "Task Force Challenge",
  "main": "index.js",
  "scripts": {
    "migrate": "sequelize db:migrate && npm run admin && npm run managers",
    "seed": "sequelize db:seed:all",
    "migrate:reset": "sequelize db:migrate:undo:all && npm run migrate",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --require @babel/register ./src/tests/ --recursive  --exit --timeout 20000 ",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset",
    "lint": "eslint ./",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "coverage": "nyc --reporter=lcov --reporter=text npm test",
    "start:dev": "nodemon --exec babel-node src/index.js",
    "start": "babel-node src/index.js",
    "build": "babel src --out-dir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leny62/To-Do-api.git"
  },
  "author": "Leny",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leny62/To-Do-api/issues"
  },
  "homepage": "https://github.com/leny62/To-Do-api#readme",
